#%RAML 1.0 Library
uses:
  enumerations: enumerations.raml

types:

  RefData:
    properties:
      uuid: string
      code: string
      name: string

  AdhocReason:
    type: RefData

  Agent:
    properties:
      uuid: string
      name: string
      iataCode?: string
      station: Station

  AirCraftType:
    type: RefData
    properties:
      air: boolean

  AirlineService:
    type: RefData

  Customer:
    properties:
      id: string
      name: string
      customerType: enumerations.CustomerType

  ExchangeRateType:
    type: RefData

  Station:
    type: RefData

  Location:
      type: RefData

  Carrier:
      type: RefData

  CarrierProduct:
      properties:
        id: string
        name: string

  Currency:
    type: RefData

  Prefix:
    properties:
      uuid: string
      code:
        pattern: "[A-Z0-9][0-9]{2}"
  Product:
    type: RefData

  SurchargeCategory:
    type: RefData

  SurchargeCode:
    type: RefData
    properties:
      iata: boolean
      iataAlias:
        type: object
        properties:
          id: string
          code: string
      surchargeType: enumerations.SurchargeType
      globalSurchargeCategory: SurchargeCategory
